<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-primary">Nova postagem</button></a>

{{#each postagens}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <small>Slug: {{slug}}</small> 
            <br>
            <p>Descrição: {{descricao}}</p>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <small>Data de criação: {{data}}</small><br>
            <br>
            <p>Conteúdo: {{conteudo}}</p>

            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar postagem</button></a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type = "hidden" name = "id" value = "{{_id}}">
                <button type = "submit" class = "btn btn-danger mt-2">Deletar postagem</button>
            </form>

        </div>
    </div>
{{else}}
<h4 class="mt-4">Nenhuma postagem registrada</h4>
{{/each}}